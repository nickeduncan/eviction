<h1>Eviction Cases</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= sort_link "property_id", "Property" %></th>
      <th><%= sort_link "unit" %></th>
      <th><%= sort_link "tenant_id", "Tenant" %></th>
      <th><%= sort_link "name" %></th>
      <th><%= sort_link "status" %></th>
      <!-- <th>0-30 Day Balance</th>
      <th>31-60 Day Balance</th>
      <th>61-90 Day Balance</th>
      <th>Over 90 Day Balance</th> -->
      <th><%= sort_link "total_owed_in_cents", "Total Owed" %></th>
      <th>Housing Authority</th>
      <th>General Notes</th>
      <th>Court Registry</th>
      <th><%= sort_link "file_date", "File Date" %></th>
      <th>Summons Served</th>
      <th>Case Number</th>
      <th>Default Date</th>
      <th>Judgement</th>
      <th>Writ of Possession</th>
      <th>Motion to Strike</th>
      <th>Stipulations</th>
      <th>24-Hour notice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eviction_cases.each do |eviction_case| %>
      <tr>
        <td><%= eviction_case.property_id %></td>
        <td><%= eviction_case.unit %></td>
        <td><%= eviction_case.tenant_id %></td>
        <td><%= eviction_case.name %></td>
        <td><%= eviction_case.status %></td>
        <!-- <td>$<%= eviction_case.formatted_balance(eviction_case.balance_0_30_in_cents) %></td>
        <td>$<%= eviction_case.formatted_balance(eviction_case.balance_31_60_in_cents) %></td>
        <td>$<%= eviction_case.formatted_balance(eviction_case.balance_61_90_in_cents) %></td>
        <td>$<%= eviction_case.formatted_balance(eviction_case.balance_over_90_in_cents) %></td> -->
        <td>$<%= eviction_case.formatted_balance(eviction_case.total_owed_in_cents) %></td>
        <td>$<%= eviction_case.formatted_balance(eviction_case.housing_authority_in_cents) %></td>
        <td><%= eviction_case.general_notes %></td>
        <td>$<%= eviction_case.formatted_balance(eviction_case.court_registry_in_cents) %></td>
        <td><%= eviction_case.file_date %></td>
        <td><%= eviction_case.summons_served %></td>
        <td><%= eviction_case.case_number %></td>
        <td><%= eviction_case.default_date %></td>
        <td><%= eviction_case.judgement %></td>
        <td><%= eviction_case.writ_of_possession %></td>
        <td><%= eviction_case.motion_to_strike %></td>
        <td><%= eviction_case.stipulations %></td>
        <td><%= eviction_case.twenty_four_hour_notice %></td>
        <td><%= link_to 'Complaint', [:complaint, eviction_case] %></td>
        <td><%= link_to 'Default', [:default, eviction_case] %></td>
        <td><%= link_to 'Strike', [:strike, eviction_case] %></td>
        <td><%= link_to 'Dismiss', [:dismiss, eviction_case] %></td>
        <td><%= link_to 'Show', eviction_case %></td>
        <td><%= link_to 'Edit', edit_eviction_case_path(eviction_case) %></td>
        <td><%= link_to 'Delete', eviction_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

