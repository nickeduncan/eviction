<p id="notice"><%= notice %></p>

<h1>Eviction Cases</h1>

<table class="table">
  <thead>
    <tr>
      <th>Property</th>
      <th>Unit</th>
      <th>Tenant</th>
      <th>Name</th>
      <th>Status</th>
      <th>Balance 0 30 in cents</th>
      <th>Balance 31 60 in cents</th>
      <th>Balance 61 90 in cents</th>
      <th>Balance over 90 in cents</th>
      <th>Total owed in cents</th>
      <th>Housing authority in cents</th>
      <th>General notes</th>
      <th>Court registry in cents</th>
      <th>File date</th>
      <th>Summons served</th>
      <th>Case number</th>
      <th>Default date</th>
      <th>Judgement</th>
      <th>Writ of possession</th>
      <th>Motion to strike</th>
      <th>Stipulations</th>
      <th>Twenty four hour notice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eviction_cases.each do |eviction_case| %>
      <tr>
        <td><%= eviction_case.property_id %></td>
        <td><%= eviction_case.unit %></td>
        <td><%= eviction_case.tenant_id %></td>
        <td><%= eviction_case.name %></td>
        <td><%= eviction_case.status %></td>
        <td><%= eviction_case.balance_0_30_in_cents %></td>
        <td><%= eviction_case.balance_31_60_in_cents %></td>
        <td><%= eviction_case.balance_61_90_in_cents %></td>
        <td><%= eviction_case.balance_over_90_in_cents %></td>
        <td><%= eviction_case.total_owed_in_cents %></td>
        <td><%= eviction_case.housing_authority_in_cents %></td>
        <td><%= eviction_case.general_notes %></td>
        <td><%= eviction_case.court_registry_in_cents %></td>
        <td><%= eviction_case.file_date %></td>
        <td><%= eviction_case.summons_served %></td>
        <td><%= eviction_case.case_number %></td>
        <td><%= eviction_case.default_date %></td>
        <td><%= eviction_case.judgement %></td>
        <td><%= eviction_case.writ_of_possession %></td>
        <td><%= eviction_case.motion_to_strike %></td>
        <td><%= eviction_case.stipulations %></td>
        <td><%= eviction_case.twenty_four_hour_notice %></td>
        <td><%= link_to 'Show', eviction_case %></td>
        <td><%= link_to 'Edit', edit_eviction_case_path(eviction_case) %></td>
        <td><%= link_to 'Destroy', eviction_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

